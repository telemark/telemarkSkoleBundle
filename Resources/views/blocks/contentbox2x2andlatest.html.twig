<div class="row block-contentlist">
    <div class="grid grid--12">

            <div class="block--box--wrapper">
                {% for locationId in contentArray %}
                    {{ render(controller('ez_content:viewLocation', {
                        'locationId': locationId,
                        'viewType': 'block_box'
                    })) }}
                {% endfor %}
            </div>
            <div class="item--aside">
                <h2>Sist oppdatert</h2>
                <hr>
                {% if listArray is defined %}
                    <ul>
                        {% for content in listArray %}
                            <li>
                                {% if getContentTypeIdentifier( content.contentInfo.contentTypeId ) == 'link'  %}
                                    {{ render(controller('ez_content:viewLocation', {
                                        'locationId': content.contentInfo.mainLocationId,
                                        'viewType': 'shortcut_line'
                                    })) }}
                                {% else %}
                                {% set intro = ez_content_name( content ) %}
                                    <a href="{{ url( 'ez_urlalias', {'contentId': content.contentInfo.id } ) }}">
                                    {% if intro[31:] != '' %}
                                        {{ intro[:30] ~ '...' }}
                                    {% else %}
                                        {{ intro[:30]}}
                                    {% endif %}</a>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
    </div>
</div>