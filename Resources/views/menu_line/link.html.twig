{% set url = content.getField( 'url' ) %}
{% set open_in_new_window = content.getField( 'open_in_new_window' ) %}
{% set target = '' %}
{% if open_in_new_window.value == true %}
    {% set target = 'target="_blank"' %}
{% endif %}
<a href="{{ url.value.link }}" {{ target }} class="menu__item-link">{{ content.contentInfo.name }}</a>